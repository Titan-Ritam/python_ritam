            print("Your without interest amount: ", woi)
        elif payment_list[payment_type] == "Yearly":
            print("Your with interest amount: ", woiy + (woiy / 100 * 10))
            print("Your only interest amount: ", (woiy / 100 * 10))
            print("Your without interest amount: ", woiy)
        else:
            print("Wrong Input!!")

    elif d==2:
