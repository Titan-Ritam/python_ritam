print("Welcome to NEY KAJ KHOY BHAJ  BANK")
payment_list = {1 :"Monthly", 2 :"Half yearly", 3 :"Yearly"}
print("Select Payment type:")
def getdate():
    import datetime
    return datetime.datetime.now()
try:
    for key, value in payment_list.items():
